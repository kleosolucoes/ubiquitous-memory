CREATE TABLE `empresa_situacao` (
  `id` int(6) unsigned NOT NULL AUTO_INCREMENT,
  `empresa_id` int(6) unsigned DEFAULT NULL,
  `situacao_id` int(1) unsigned DEFAULT NULL,
  `data_criacao` date DEFAULT NULL,
  `hora_criacao` time DEFAULT NULL,
  `data_inativacao` date DEFAULT NULL,
  `hora_inativacao` time DEFAULT NULL,
  PRIMARY KEY (`id`),
  KEY `empresa_id` (`empresa_id`,`situacao_id`),
  KEY `situacao_id` (`situacao_id`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1 AUTO_INCREMENT=1 ;


ALTER TABLE `empresa_situacao`
  ADD CONSTRAINT `fk_empresa_situacao_empresa_id` FOREIGN KEY (`empresa_id`) REFERENCES `empresa` (`id`) ON DELETE NO ACTION ON UPDATE NO ACTION,
  ADD CONSTRAINT `fk_empresa_situacao_situacao_id` FOREIGN KEY (`situacao_id`) REFERENCES `situacao` (`id`) ON DELETE NO ACTION ON UPDATE NO ACTION;
