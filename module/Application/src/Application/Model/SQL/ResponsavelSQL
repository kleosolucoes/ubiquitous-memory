CREATE TABLE `responsavel` (
  `id` int(6) unsigned NOT NULL AUTO_INCREMENT,
  `nome` varchar(50) NOT NULL,
  `telefone` bigint(11) unsigned NOT NULL,
  `email` varchar(50) NOT NULL,
  `data_nascimento` date DEFAULT NULL,
  `cpf` bigint(11) DEFAULT NULL,
  `nome_fantasia` varchar(50) NOT NULL,
  `razao_social` varchar(80) DEFAULT NULL,
  `cnpj` bigint(14) NOT NULL,
  `telefone_empresa` bigint(11) DEFAULT NULL,
  `email_empresa` varchar(30) DEFAULT NULL,
  `numero_lojas` int(3) DEFAULT NULL,
  `data_criacao` date NOT NULL,
  `hora_criacao` time NOT NULL,
  `data_inativacao` date DEFAULT NULL,
  `hora_inativacao` time DEFAULT NULL,
  `token` varchar(80) DEFAULT NULL,
  `upload_cpf` varchar(80) DEFAULT NULL,
  `upload_contrato_social` varchar(80) DEFAULT NULL,
  PRIMARY KEY (`id`),
  KEY `email` (`email`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;